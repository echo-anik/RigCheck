# Application URLs - Will update after Vercel deployment
NEXT_PUBLIC_APP_URL=https://rigcheck-web.vercel.app
NEXT_PUBLIC_SITE_NAME=RigCheck PC Builder
NEXT_PUBLIC_SITE_URL=https://rigcheck-web.vercel.app

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=rigcheck_token
NEXTAUTH_URL=https://rigcheck-web.vercel.app
NEXTAUTH_SECRET=rigcheck-production-secret-change-this-to-random-string

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_COMPARISON=true

# SEO & Meta
NEXT_PUBLIC_SITE_DESCRIPTION=Build your perfect PC with RigCheck - Compatibility checker, price comparison, and community builds
NEXT_PUBLIC_SITE_KEYWORDS=PC builder,gaming PC,computer parts,compatibility checker,build guide,Bangladesh PC,BD computer
NEXT_PUBLIC_DEFAULT_OG_IMAGE=https://rigcheck-web.vercel.app/og-image.jpg

# Contact
NEXT_PUBLIC_SUPPORT_EMAIL=support@rigcheck.com
NEXT_PUBLIC_CONTACT_EMAIL=contact@rigcheck.com

# Currency & Locale
NEXT_PUBLIC_DEFAULT_CURRENCY=BDT
NEXT_PUBLIC_DEFAULT_LOCALE=en-BD
NEXT_PUBLIC_SUPPORTED_LOCALES=en-BD,en-US

# Build Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Performance
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true
NEXT_PUBLIC_IMAGE_QUALITY=85
NEXT_PUBLIC_API_TIMEOUT=30000

# Pagination
NEXT_PUBLIC_COMPONENTS_PER_PAGE=20
NEXT_PUBLIC_BUILDS_PER_PAGE=12

# Cache Control
NEXT_PUBLIC_CACHE_REVALIDATE_TIME=3600
